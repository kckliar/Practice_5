import random
countries_capitals = {
    'Египет' : 'Каир',
    'Италия' : 'Рим',
    'Франция' : 'Париж',
    'Армения' : 'Ереван',
    'Германия' : 'Берлин',
    'Швейцария' : 'Берн',
    'Япония' : 'Токио',
    'Бельгия' : 'Брюссель',
    'Венгрия' : 'Будапешт',
    'Лихтенштейн' : 'Вадуц',
    'Мальта' : 'Валлетта',
    'Польша' : 'Варшава',
    'Ватикан' : 'Ватикан',
    'Австрия' : 'Вена',
    'Литва' : 'Вильнюс',
    'Ирландия' : 'Дублин',
    'Хорватия' : 'Загреб',
    'Украина' : 'Киев',
    'Молдавия' : 'Кишинёв',
    'Дания' : 'Копенгаген',
    'Португалия' : 'Лиссабон',
    'Великобритания' : 'Лондон',
    'Словения' : 'Любляна',
    'Люксембург' : 'Люксембург',
    'Испания' : 'Мадрид',
    'Белоруссия' : 'Минск',
    'Монако' : 'Монако',
    'Россия' : 'Москва',
    'Греция' : 'Афины',
    'Чехия' : 'Прага',
    'Андорра' : 'Андорра-ла-Велья',
    'Финляндия' : 'Хельсинки',
    'Таиланд' : 'Бангкок',
    'Израиль' : 'Иерусалим',
    'Сербия' : 'Белград',
    'Кипр' : 'Никосия',
    'Казахстан' : 'Нур-Султан',
    'Китай' : 'Пекин',
    'КНДР' : 'Пхеньян',
    'Словакия' : 'Братислава',
    'Мадагаскар' : 'Антананариву',
    'Нидерланды' : 'Амстердам'
}
count = 0
right = 0
false = 0
print('Давайте сыграем в викторину по Географии!', end='\n\n')
while count <= 9:
    random_choice = random.choice(list(countries_capitals.items())) 
    random_choice_list = list(random_choice)
    random_choice_capital = random_choice_list[0]
    random_choice_country = random_choice_list[1]
    print('Введите с большой буквы столицу этой страны: ', random_choice_capital)
    answer = input()
    if answer == random_choice_country:
        print('Вы ввели правильный ответ! Действительно, столица странцы "', random_choice_capital, '" это -', random_choice_country, end='\n\n')
        right += 1
    elif answer != random_choice_country:
        print('Увы, вы ввели неправильный ответ! На самом деле столица страны "', random_choice_capital, '" это -', random_choice_country, end='\n\n')
        false += 1
    count += 1
print('Подведём итоги игры!')
print('Количество верных ответов: ', right)
print('Количество неверных ответов: ', false)
